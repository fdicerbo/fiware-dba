<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<!-- Specify a JDBC datasource, by modifying a.b.c.d 
	with correct URL, as well as username and password,
	if desired -->



	<Resource	name="jdbc/censusdb" 
	    		auth="Container" 
	    		type="javax.sql.DataSource"
				username="root" 
 
				driverClassName="com.mysql.jdbc.Driver"
				url="jdbc:mysql://a.b.c.d:3306/census"
				maxActive="10" 
				maxIdle="4"
				removeAbandoned="true"
				removeAbandonedTimeout="60" 
				logAbandoned="true"
	 			validationQuery="select 1" 
				/>

</Context>
